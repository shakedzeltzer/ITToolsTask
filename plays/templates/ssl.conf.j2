Listen 443
<VirtualHost *:443>
    DocumentRoot "/var/www/html"
    ServerName www.example.com:443

    SSLEngine on
    SSLCertificateFile /etc/pki/tls/certs/webserverCert.crt
    SSLCertificateKeyFile /etc/pki/tls/private/webserverCert.key

    <Directory "/var/www/html">
        AllowOverride All
        Require all granted
    </Directory>
</VirtualHost>

